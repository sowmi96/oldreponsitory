<div class="modal" id="myModal3" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="header-log">Forgot Password</div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" (click)="closeDialog()" #closeButton>
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form (ngSubmit)="resetPassword();" #heroForm="ngForm">
          <div>
            <div class="form-group">
              <label class="credential-label">Email ID</label>
              <input type="e-mail" class="form-control" placeholder="Enter email to reset password" (change)="verifyEmail()" name="email"
                [(ngModel)]="email" required>
              <div class="caution" *ngIf="showEmailCaution">
                Please enter a valid email address to reset password
              </div>
            </div>
            <button type="submit" class="btn btn-primary">{{reset}}</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
